  <div class="nsw-page-layout__sidebar{{#if desktop}} nsw-page-layout__sidebar--desktop{{/if}}">
    <!-- START: Left sidebar content -->
    <div class="nsw-ds-example-container"></div>
    <!-- END: Left sidebar content -->
  </div>
  {{/if-equals}}
  <main class="nsw-page-layout__main">
