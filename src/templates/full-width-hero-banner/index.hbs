{{>_header content="#content" nav="#main-navigation"}}
{{>_main-navigation model.nav-basic}}

{{>_hero-banner model.hero-banner}}

<main id="content">
  <section class="nsw-section--white">
    <div class="nsw-container">
      <div class="nsw-page-layout">
        <div class="nsw-page-layout__main">
          <div class="nsw-grid">
            <div class="nsw-col nsw-col-md-4">
              {{>_card model.card-media-1}}
            </div>
            <div class="nsw-col nsw-col-md-4">
              {{>_card model.card-media-2}}
            </div>
            <div class="nsw-col nsw-col-md-4">
              {{>_card model.card-media-3}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="nsw-section--light-10">
    <div class="nsw-container">
      <div class="nsw-page-layout">
        <div class="nsw-page-layout__main">
          <h2 class="nsw-section-title">Energy and utilities</h2>
          <div class="nsw-grid">
            <div class="nsw-col nsw-col-md-6 nsw-col-lg-3">
              {{>_card model.card-simple-1}}
            </div>
            <div class="nsw-col nsw-col-md-6 nsw-col-lg-3">
              {{>_card model.card-simple-2}}
            </div>
            <div class="nsw-col nsw-col-md-6 nsw-col-lg-3">
              {{>_card model.card-simple-3}}
            </div>
            <div class="nsw-col nsw-col-md-6 nsw-col-lg-3">
              {{>_card model.card-simple-4}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="nsw-section--white">
    <div class="nsw-container">
      <div class="nsw-page-layout">
        <div class="nsw-page-layout__main">
          <h2 class="nsw-section-title">Latest updates</h2>
          <div class="nsw-grid">
            <div class="nsw-col nsw-col-md-4">
              {{>_card model.card-news-1}}
            </div>
            <div class="nsw-col nsw-col-md-4">
              {{>_card model.card-news-2}}
            </div>
            <div class="nsw-col nsw-col-md-4">
              {{>_card model.card-news-3}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

{{>_footer model.footer}}
