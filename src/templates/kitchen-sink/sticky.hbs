          <div class="nsw-col nsw-col-md-6">
            <h3>Global alert</h3>
            <button class="nsw-button nsw-button--dark nsw-m-top-md" id="init-global-alert" type="button">Initialise Global alert</button>
            <script>
              (function () {
                var btn = document.getElementById('init-global-alert')
                if (!btn) return

                btn.addEventListener('click', function () {
                  // Avoid duplicate injection
                  if (document.querySelector('[data-module="global-alert"]')) return

                  // Insert at the very top of the page (before the first child of <body>)
                  var first = document.body.firstElementChild

                  // Build Global Alert element
                  var alertEl = document.createElement('div')
                  alertEl.className = 'nsw-global-alert nsw-global-alert--critical'
                  alertEl.setAttribute('data-module', 'global-alert')
                  // alertEl.setAttribute('data-cookie-name', 'nsw-global-alert') - enable if cookie persistence is needed
                  alertEl.setAttribute('role', 'alert')
                  alertEl.style.position = 'relative'
                  alertEl.style.zIndex = '2000'
                  alertEl.innerHTML = '\
                    <div class="nsw-global-alert__wrapper">\
                      <div class="nsw-global-alert__content">\
                        <div class="nsw-global-alert__title">Important update</div>\
                        <p>Service outages may occur between 1am and 3am.</p>\
                      </div>\
                      <button class="nsw-icon-button js-close-alert" type="button">\
                        <span class="material-icons nsw-material-icons" aria-hidden="true">close</span>\
                        <span class="sr-only">Close message</span>\
                      </button>\
                    </div>'

                  // Insert as the first element in <body> so it sits above everything
                  if (first) {
                    document.body.insertBefore(alertEl, first)
                  } else {
                    document.body.appendChild(alertEl)
                  }

                  if (window.NSW && window.NSW.GlobalAlert) {
                    var instance = new window.NSW.GlobalAlert(alertEl)
                    instance.init()
                    var closeBtn = alertEl.querySelector('button.js-close-alert')
                    if (closeBtn) {
                      closeBtn.addEventListener('click', function () {
                        // no-op: component hides itself; no layout padding to revert
                      })
                    }
                  } else {
                    console.warn('GlobalAlert module not found; injected markup only.')
                  }
                })
              })()
            </script>

