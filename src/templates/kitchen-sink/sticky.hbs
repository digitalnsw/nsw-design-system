              btn.addEventListener('click', function () {
                if (!(window.NSW && window.NSW.QuickExit)) return
                var getVal = function (id, fallback) {
                  var el = document.getElementById(id)
                  return el && el.value !== '' ? el.value : fallback
                }
                var safeUrl = getVal('qe-safe-url', '{{model.quick-exit.safeUrl}}')
                var secondarySafeUrl = getVal('qe-secondary-safe-url', '')
                var exitLabel = getVal('qe-exit-label', '{{model.quick-exit.exitLabel}}')
