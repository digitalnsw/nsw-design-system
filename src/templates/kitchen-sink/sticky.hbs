                var description = getVal('qe-description', '{{model.quick-exit.description}}')
                var themeSel = document.getElementById('qe-theme')
                var theme = themeSel ? themeSel.value : 'dark'
                var esc = document.getElementById('qe-esc') ? document.getElementById('qe-esc').checked : true
                var cloakSel = document.getElementById('qe-cloak')
                var cloak = cloakSel ? cloakSel.value : 'none'

                window.NSW.QuickExit.init({
                  title: title,
                  description: description,
                  safeUrl: safeUrl,
                  secondarySafeUrl: secondarySafeUrl,
                  exitLabel: exitLabel,
                  theme: theme,
                  enableEsc: esc,
                  cloakMode: cloak
                })
              })
            })()
