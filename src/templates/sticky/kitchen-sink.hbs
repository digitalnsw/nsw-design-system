{{>_masthead content="#content" nav="#main-nav"}}
{{>_header header-title="Premier & Cabinet"}}
{{>_main-nav model.nav-basic}}
<div class="nsw-container nsw-p-bottom-xs">
  {{>_breadcrumbs model.breadcrumbs}}
</div>

<div class="nsw-container nsw-p-top-sm nsw-p-bottom-lg">
  <div class="nsw-layout">
    <main id="content" class="nsw-layout__main">
      {{>_back-to-top}}
      <div class="nsw-block">
        <h1>Domestic, family and sexual violence</h1>
        <p class="nsw-intro">How to get help and support, emergency housing, understanding domestic and sexual violence, sexual consent and the law, legal help, and how to stay safe.</p>

        <h2>Hotlines</h2>
        <ul>
          <li><strong>NSW Domestic Violence Line</strong> <a href="tel:1800656463">1800 656 463</a></li>
          <li><strong>1800 RESPECT</strong> <a href="tel:1800737732">1800 737 732</a></li>
          <li><strong>Link2home Homelessness</strong> <a href="tel:1800152152">1800 152 152</a></li>
          <li><strong>Link2Home Veterans</strong> <a href="tel:1800326989">1800 326 989</a></li>
          <li><strong>Child Protection Helpline</strong> <a href="tel:132111">13 21 11</a></li>
        </ul>

        <h2 id="support-contacts">Initialise all banners</h2>
        <div class="nsw-grid nsw-grid--spaced nsw-m-top-md">
          <div class="nsw-col nsw-col-md-6">
            <h3>Quick Exit</h3>
            <button class="nsw-button nsw-button--dark nsw-m-top-md" id="init-quick-exit" type="button">Initialise Quick exit banner</button>
            <script>
              document.getElementById('init-quick-exit').addEventListener('click', function () {
                if (window.NSW && window.NSW.QuickExit) {
                  window.NSW.QuickExit.init({
                    title: "{{model.quick-exit.title}}",
                    description: "{{model.quick-exit.description}}",
                    exitUrl: "{{model.quick-exit.exitUrl}}",
                    exitLabel: "{{model.quick-exit.exitLabel}}",
                    theme: "dark",
                    eraseCurrentPage: true,
                    newTab: false,
                    enableEsc: true
                  })
                }
              })
            </script>
          </div>

          <div class="nsw-col nsw-col-md-6">
            <h3>Cookie consent</h3>
            <button class="nsw-button nsw-button--dark nsw-m-top-md" id="init-cookie-consent" type="button">Initialise Cookie consent banner</button>
            <script>
              document.getElementById('init-cookie-consent').addEventListener('click', function () {
                if (window.NSW && window.NSW.CookieConsent) {
                  new window.NSW.CookieConsent(window.NSW.cookieConsentConfig || {
                    consentBanner: {
                      title: 'Cookie use on our website',
                      description: 'We use cookies to improve your experience on our site.',
                      acceptAllBtn: 'Accept all cookies',
                      acceptNecessaryBtn: 'Reject non-essential cookies',
                      showPreferencesBtn: 'Manage your cookies',
                      confirmationMessage: 'Your cookie preferences have been saved.',
                    },
                    preferencesDialog: {}
                  })
                } else {
                  console.error('CookieConsent module not found.')
                }
              })
            </script>
          </div>
        </div>

        <h2>Quick access</h2>
        <div class="nsw-grid nsw-m-bottom-md">
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="Domestic, family and sexual violence support contacts" href="#support-contacts"}}
          </div>
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="Safer Pathway" href="#safer-pathway"}}
          </div>
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="Help someone in a domestic violence situation" href="#help-someone"}}
          </div>
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="NSW Victims Support Scheme" href="#victims-support"}}
          </div>
        </div>

        <h2>How we can help</h2>
        <div class="nsw-grid">
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="About domestic and family violence" href="#about-dfv"}}
          </div>
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="About sexual violence" href="#about-sexual-violence"}}
          </div>
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="How to stay safe" href="#stay-safe"}}
          </div>
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="My situation isâ€¦" href="#my-situation"}}
          </div>
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="Police, legal help and the law" href="#police-legal"}}
          </div>
          <div class="nsw-col nsw-col-md-6 nsw-col-lg-4">
            {{>_card heading="Support programs" href="#support-programs"}}
          </div>
        </div>
      </div>

      {{>_callout heading= "Keep up-to date" copy="Join our <a href='#'>community</a> and register for updates to stay up-to-date with all the latest patterns releases."}}

    </main>
    <div class="nsw-layout__sidebar">
      <div class="nsw-section nsw-section--box">
        <form class="nsw-form" action="#">
          <h4 class="nsw-section-title">Want to stay in touch?</h4>
          <p>Find out about work happening across NSW Government in the digital space. </p>
          <div class="nsw-form__group">
            {{>_text-input
              id="subscribe-full-name"
              label="Full name"
              required=true
            }}
          </div>
          <div class="nsw-form__group">
            {{>_text-input
              id="subscribe-email"
              label="Email"
              required=true
            }}
          </div>
          <div class="nsw-form__group">
            {{>_checkbox
              id="subscribe-tc"
              name="subscribe-terms"
              label="I have read the information regarding <a href='#'>privacy policy</a>"
            }}
          </div>
          <div class="nsw-form__group">
            {{>_button-input type="submit" style="dark" text="Submit"}}
          </div>          
        </form>
      </div>

    </div>
  </div>
</div>

{{>_footer model.footer}}
