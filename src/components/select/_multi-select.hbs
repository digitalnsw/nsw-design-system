<label class="nsw-form__label{{#if required}} nsw-form__required{{/if}}" for="{{id}}">{{name}}{{#if required}}<span class="sr-only"> (required)</span>{{/if}}</label>

{{#if helper}}
  <span class="nsw-form__helper" id="{{id}}-helper-text">{{helper-text}}</span>
{{/if}}

<select class="nsw-form__select" id="{{id}}"{{#if helper}} aria-describedby="{{#if helper}}{{id}}-helper-text{{/if}}"{{/if}}{{#if error}} aria-invalid="true"{{/if}}>
  <option value="">Please select</option>  
  {{#each list}}
  <option value="{{this}}">{{this}}</option>
  {{/each}}
</select>

{{#if error}}
<span id="{{id}}-error-text" class="nsw-form__helper nsw-form__helper--error">
  <span class="material-icons nsw-material-icons" focusable="false" aria-hidden="true">cancel</span>{{error-text}}</span>
{{/if}}

{{#if valid}}
<span id="{{id}}-valid-text" class="nsw-form__helper nsw-form__helper--valid">
  <span class="material-icons nsw-material-icons" focusable="false" aria-hidden="true">check_circle</span>{{valid-text}}
</span>
{{/if}}
