<label class="nsw-form__label{{#if required}} nsw-form__required{{/if}}" for="{{id}}">{{label}}{{#if required}}<span class="sr-only"> (required)</span>{{/if}}</label>

{{#if helper-text}}<span class="nsw-form__helper" id="{{id}}-helper-text">{{{helper-text}}}</span>{{/if}}

{{#if error-text}}<span id="{{id}}-error-text" class="nsw-form__helper nsw-form__helper--error"><span class="material-icons nsw-material-icons" focusable="false" aria-hidden="true">cancel</span>{{error-text}}</span>{{/if}}

{{#if valid-text}}<span id="{{id}}-valid-text" class="nsw-form__helper nsw-form__helper--valid"><span class="material-icons nsw-material-icons" focusable="false" aria-hidden="true">check_circle</span>{{valid-text}}</span>{{/if}}

<div class="nsw-file-upload js-file-upload">
    <label for="{{id}}" class="nsw-button nsw-button--dark-outline-solid nsw-file-upload__label">
        <span class="nsw-file-upload__label-content">Upload a file</span>
    </label>
    <input type="file" class="nsw-file-upload__input" name="{{id}}" id="{{id}}"{{#if helper-text}} aria-describedby="{{#if helper-text}}{{id}}-helper-text{{/if}}"{{/if}}{{#if error-text}} aria-invalid="true"{{/if}} accept="image/*,.pdf" multiple>
    <ul class="nsw-file-upload__list">
        <li class="nsw-file-upload__item">
            <span class="nsw-file-upload__item-filename"></span>
            <button type="button" class="nsw-icon-button nsw-file-upload__item-button">
                <span class="sr-only">Remove file</span>
                <span class="material-icons nsw-material-icons" focusable="false" aria-hidden="true">cancel</span>
            </button>
        </li>
    </ul>
</div>



