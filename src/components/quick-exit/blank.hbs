---
title: Global alert
page: true
model:  json/quick-exit.json
---

<h3>Light</h3>
<button class="nsw-button nsw-button--dark js-quick-exit" data-theme="light" type="button" aria-expanded="true">Initialise banner</button>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var quickExitBtns = document.querySelectorAll('.js-quick-exit')
  // Assume the first button is for light theme:
  if (quickExitBtns[0]) {
    quickExitBtns[0].addEventListener('click', function(e) {
      e.preventDefault()
      if (window.NSW && window.NSW.QuickExit) {
        window.NSW.QuickExit.init({
          exitUrl: "{{model.exitUrl}}",
          exitLabel: "{{model.exitLabel}}",
          tooltip: "{{model.tooltip}}",
          moreInfoUrl: "{{model.moreInfoUrl}}",
          moreInfoLabel: "{{model.moreInfoLabel}}",
          theme: "light"
        })
      } else {
        console.error('QuickExit not found on window.NSW')
      }
    })
  }
})
</script>

