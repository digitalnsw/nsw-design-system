---
title: Filters
page: true
width: wide
model:
  options-1: ../../components/filters/json/options-1.json
  options-2: ../../components/filters/json/options-2.json
  options-3: ../../components/filters/json/options-3.json
---

{{#>_layout-container}}

<div class="nsw-grid">
  <div class="nsw-col">
    <h3>Instant filtering</h3>
  </div>
</div>

<div class="nsw-grid">
  <div class="nsw-col nsw-col-xl-4">
    <div class="nsw-docs__component">
      <h4>Visible Open</h4>
      {{>_filters model.options-1 instant='true' filters-id='1'}}
    </div>
  </div>
  <div class="nsw-col nsw-col-xl-4">
    <div class="nsw-docs__component">
      <h4>Visible Collapsed</h4>
      {{>_filters model.options-2 instant='true' collapsed='true' js='true' filters-id='2'}}
    </div>
  </div>
</div>

<div class="nsw-grid">
  <div class="nsw-col nsw-col-xl-4">
    <div class="nsw-docs__component">
      <h4>Down Open (no counter)</h4>
      {{>_filters model.options-2 instant='true' down='true' js='true' nocount='true' filters-id='3'}}
    </div>
  </div>
  <div class="nsw-col nsw-col-xl-4">
    <div class="nsw-docs__component">
      <h4>Down Collapsed</h4>
      {{>_filters model.options-3 instant='true' down='true' collapsed='true' js='true' filters-id='4'}}
    </div>
  </div>
</div>

<div class="nsw-grid">
  <div class="nsw-col">
    <h3>Batch filtering</h3>
  </div>
</div>

<div class="nsw-grid">
  <div class="nsw-col nsw-col-xl-4">
    <div class="nsw-docs__component">
      <h4>Right Open</h4>
      {{>_filters model.options-2 batch='true' right='true' js='true' filters-id='5'}}
    </div>
  </div>
  <div class="nsw-col nsw-col-xl-4">
    <div class="nsw-docs__component">
      <h4>Right Collapsed</h4>
      {{>_filters model.options-3 batch='true' right='true' collapsed='true' js='true' filters-id='6'}}
    </div>
  </div>
</div>

<div class="nsw-grid">
  <div class="nsw-col nsw-col-xl-4">
    <h4>Down Open</h4>
    <div class="nsw-docs__component">
      {{>_filters model.options-2 batch='true' down='true' js='true' filters-id='7'}}
    </div>
  </div>
  <div class="nsw-col nsw-col-xl-4">
    <h4>Down Collapsed (no counter)</h4>
    <div class="nsw-docs__component">
      {{>_filters model.options-3 batch='true' down='true' collapsed='true' js='true' nocount='true' filters-id='8'}}
    </div>
  </div>
</div>
{{/_layout-container}}
