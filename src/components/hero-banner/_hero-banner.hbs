<div class="nsw-hero-banner{{#if theme}} nsw-hero-banner--{{theme}}{{/if}}{{#if wide}} nsw-hero-banner--wide{{/if}}{{#if featured}} nsw-hero-banner--featured{{/if}}{{#if lines}} nsw-hero-banner--lines{{/if}}">
  <div class="nsw-hero-banner__container">
    <div class="nsw-hero-banner__wrapper">
      <div class="nsw-hero-banner__content">
        <h1>{{heading}}</h1>{{#if copy}}
        <p class="nsw-intro">{{copy}}</p>{{/if}}{{#if cta}}
        <div class="nsw-hero-banner__button"><a href="#" class="nsw-button {{#if-equals theme "dark"}}nsw-button--white{{else}}nsw-button--dark{{/if-equals}}">{{cta}}</a></div>{{/if}}
      </div>
      {{#if links}}
      <div class="nsw-hero-banner__links">
        <div class="nsw-hero-banner__list">
          {{#if links-title}}<div class="nsw-hero-banner__sub-title">{{links-title}}</div>{{/if}}
          <ul>
            {{#each links}}
            <li><a href="#">{{this}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>
      {{/if}}
   <div class="nsw-hero-banner__box">
     {{#if img}}
       {{#if-equals img-variant "cover-left"}}
         <img class="nsw-hero-banner__image--cover-left" src="{{img}}" alt="">
       {{else if-equals img-variant "no-cover"}}
         <img class="nsw-hero-banner__image--no-cover" src="{{img}}" alt="">
       {{else}}
         <img class="nsw-hero-banner__image" src="{{img}}" alt="">
       {{/if-equals}}
     {{else if lines}}
       <div class="nsw-hero-banner__lines"></div>
     {{/if}}
   </div>
    </div>
  </div>
</div>
