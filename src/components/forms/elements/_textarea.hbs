<label class="nsw-form__label{{#if required}} nsw-form__required{{/if}}" for="{{id}}">{{label}}{{#if required}}<span class="sr-only"> (required)</span>{{/if}}</label>{{#if helper-text}}
<span class="nsw-form__helper" id="{{id}}-helper-text">{{helper-text}}</span>{{/if}}
<textarea class="nsw-form__input" name="textarea" id="{{id}}"{{#if helper-text}} aria-describedby="{{#if helper-text}}{{id}}-helper-text{{/if}}"{{/if}}{{#if error-text}} aria-invalid="true"{{/if}}></textarea>{{#if error-text}}
<span class="nsw-form__helper nsw-form__helper--error" id="{{id}}-error-text">{{error-text}}</span>{{/if}}{{#if valid-text}}
<span class="nsw-form__helper nsw-form__helper--valid" id="{{id}}-valid-text">{{valid-text}}</span>{{/if}}
