<div class="nsw-carousel js-carousel" data-drag="on"{{#if loop}} data-loop="off" data-navigation="on" data-navigation-class="nsw-carousel__navigation"{{/if}}{{#if pagination}} data-loop="off" data-navigation="on" data-navigation-class="nsw-carousel__navigation nsw-carousel__navigation--pagination" data-navigation-pagination="on"{{/if}}{{#if counter}} data-loop="off"{{/if}}>
  <p class="sr-only">Carousel items</p>
  {{>_carousel-card}}
  {{#unless counter}}
  <nav>
    <ul>
      <li>
        <button class="nsw-carousel__control carousel__control--prev js-carousel__control">
          <svg class="nsw-icon" viewBox="0 0 20 20">
            <title>Show previous items</title>
            <polyline points="13 2 5 10 13 18" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" />
          </svg>
        </button>
      </li>
      <li>
        <button class="nsw-carousel__control carousel__control--next js-carousel__control">
          <svg class="nsw-icon" viewBox="0 0 20 20">
            <title>Show next items</title>
            <polyline points="7 2 15 10 7 18" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" />
          </svg>
        </button>
      </li>
    </ul>
  </nav>{{/unless}}{{#if counter}}
  <div class="nsw-carousel__counter">
    <p><i class="js-carousel__counter"></i> / <i class="js-carousel__counter-tot"></i></p>
    <nav>
      <ul>
        <li>
          <button class="nsw-carousel__control carousel__control--prev js-carousel__control">
            <svg class="nsw-icon" viewBox="0 0 20 20">
              <title>Show previous items</title>
              <polyline points="13 18 5 10 13 2" fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="2" />
            </svg>
          </button>
        </li>
        <li>
          <button class="nsw-carousel__control carousel__control--next js-carousel__control">
            <svg class="nsw-icon" viewBox="0 0 20 20">
              <title>Show next items</title>
              <polyline points="7 18 15 10 7 2" fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="2" />
            </svg>
          </button>
        </li>
      </ul>
    </nav>
  </div>
  {{/if}}
</div>