<div class="nsw-callout">{{#if icon}}
  <i class="material-icons nsw-material-icons" focusable="false" aria-hidden="true">{{icon}}</i>{{/if}}
  <div class="nsw-callout__content">
    <h4>{{heading}}</h4>
    <p>{{{copy}}}</p>{{#if link}}
    <p><a href="{{link.href}}">{{link.text}}</a></p>{{/if}}
  </div>
</div>
